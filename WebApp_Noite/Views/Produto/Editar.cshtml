@model WebApp_Noite.Models.ProdutoModel
<div class="row">
    <div class="col-4">
    </div>

    <div class="col-4">
        <div class="card">
            <div class="card-header">
                <h2>Cadastro de Produtos</h2>
            </div>
            <div class="card-body">
                <form action="/Produto/SalvarDados" method="post">
                    <label>Id</label>
                    <input readonly name="Id" value="@Model.Id" class="form-control">
                    <br />
                    <label>Nome</label>
                    <br />
                    <input type="text" name="Nome" class="form-control" />
                    <br />

                    <label>Quantidade em Estoque</label>
                    <input type="number" name="Quantidade" class="form-control" />
                    <br />

                    <button type="submit" class="btn btn-info">
                        Salvar Produto
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-4">
    </div>
</div>